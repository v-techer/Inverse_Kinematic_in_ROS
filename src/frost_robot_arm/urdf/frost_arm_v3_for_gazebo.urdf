<?xml version="1.0" encoding="utf-8"?>

<robot name="frost_arm" xmlns:xacro="http://wiki.ros.org/xacro">

  <material name="blue">
    <color rgba="0 0 0.8 0.7"/>
  </material>
  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

  <xacro:macro name="cube_inertial" params="width height depth mass *origin">
    <inertial>
      <mass value="${mass}" />
      <xacro:insert_block name="origin" />
      <inertia ixx="${0.0833333 * mass * (height * height + depth * depth)}" ixy="0.0" ixz="0.0"
        iyy="${0.0833333 * mass * (width * width + depth * depth)}" iyz="0.0"
        izz="${0.0833333 * mass * (width * width + height * height)}" />
    </inertial>
  </xacro:macro>


  <xacro:property name="link_0_mass" value="0.515" />
  <xacro:property name="link_1_mass" value="2.214" />
  <xacro:property name="link_2_mass" value="1.081" />
  <xacro:property name="link_3_mass" value="1.081" />
  <xacro:property name="link_4_mass" value="0.643" />
  <xacro:property name="link_5_mass" value="0.020" />

  <link name="base_link">
  </link>

  <link name="link_0">
    <visual>
      <geometry>
	<box size="0.1 0.1 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.1 0.1 0.05"/>
      </geometry>
      <material name="red"/>
      <origin rpy="0 0 0" xyz="0 0 0.025"/>
    </collision>
    <xacro:cube_inertial width="0.1" depth="0.1" height="0.05" mass="${link_0_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="basejoint" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="link_0"/>
    <axis xyz="0 0 1"/>
    <limit effort="87" lower="-3.14" upper="3.14" velocity="2.1750"/>
  </joint>


  <link name="link_1">
    <visual>
      <geometry>
	<box size="0.1 0.1 0.43"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.215"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.1 0.1 0.35"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.215"/>
      <material name="red"/>
    </collision>
    <xacro:cube_inertial width="0.1" height="0.043" depth="0.1" mass="${link_1_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="joint1" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
    <parent link="link_0"/>
    <child link="link_1"/>
    <axis xyz="0 1 0"/>
    <limit effort="87" lower="-1.57" upper="1.57" velocity="2.1750"/>
  </joint>


  <link name="link_2">
    <visual>
      <geometry>
	<box size="0.08 0.08 0.21"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.105"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.08 0.08 0.21"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.105"/>
      <material name="red"/>
    </collision>
    <xacro:cube_inertial width="0.08" height="0.21" depth="0.08" mass="${link_2_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="joint2" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.43"/>
    <parent link="link_1"/>
    <child link="link_2"/>
    <axis xyz="0 1 0"/>
    <limit effort="87" lower="-1.570796" upper="1.570796" velocity="2.1750"/>
  </joint>


  <link name="link_3">
    <visual>
      <geometry>
	<box size="0.08 0.08 0.21"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.105"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.08 0.08 0.09"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.105"/>
      <material name="red"/>
    </collision>
    <xacro:cube_inertial width="0.08" height="0.09" depth="0.08" mass="${link_3_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="joint3" type="revolute">
    <origin rpy="0 0 0" xyz="0.0 0.0 0.21"/>
    <parent link="link_2"/>
    <child link="link_3"/>
    <axis xyz="0 0 1"/>
    <limit effort="87" lower="-1.9" upper="1.9" velocity="2.1750"/>
  </joint>


  <link name="link_4">
    <visual>
      <geometry>
	<box size="0.08 0.08 0.125"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0625"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.08 0.08 0.125"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0625"/>
      <material name="red"/>
    </collision>
    <xacro:cube_inertial width="0.08" height="0.125" depth="0.08" mass="${link_4_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="joint4" type="revolute">
    <origin rpy="0 0 0" xyz="0 0.0 0.21"/>
    <parent link="link_3"/>
    <child link="link_4"/>
    <axis xyz="0 1 0"/>
    <limit effort="87" lower="-2" upper="2" velocity="2.1750"/>
  </joint>


  <link name="link_5">
    <visual>
      <geometry>
	<box size="0.08 0.08 0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0006"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
	<box size="0.08 0.08 0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0006"/>
      <material name="red"/>
    </collision>
    <xacro:cube_inertial width="0.08" height="0.001" depth="0.08" mass="${link_5_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </xacro:cube_inertial>
  </link>


  <joint name="joint5" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.125"/>
    <parent link="link_4"/>
    <child link="link_5"/>
    <axis xyz="0 0 1"/>
    <limit effort="12" lower="-1.570796" upper="1.570796" velocity="2.6100"/>
  </joint>

</robot>
